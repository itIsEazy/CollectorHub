
@model MainPageIndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@if (1 == 0)
{
    <div class="col-lg-12">
        <p class="text-danger">ADD : script 3 seconds after loading page goto #trendingCollections!</p>
    </div>
}


<div class="text-center">
    <h2 class="display-4">Digitalize your collection</h2>
    <h2 class="display-4">Build FROM collectors FOR collectors!</h2>
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-lg-12">
        <div class="text-center">
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalUsersCount Users</p>
            </div>
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalCollectionsCount Collections</p>
            </div>
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalForumPostsCount Posts</p>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="col-lg-12">
    <div class="col-lg-12 text-center">
        <button class="btn btn-outline-secondary text-center w-100" type="button" data-toggle="collapse" data-target="#search" aria-expanded="false" aria-controls="collapseExample">
            Search in Collection, Forum, Market...
        </button>
    </div>

    <div class="collapse" id="search">

        <div class="col-lg-12 border">
            <form method="post">
                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.SearchModel.CategoryId"></label>
                            <select asp-for="@Model.SearchModel.CategoryId" class="form-control">
                                <option value="">All</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="@Model.SearchModel.SearchInput"></label>
                        <input asp-for="@Model.SearchModel.SearchInput" class="form-control" placeholder="Hot Wheels fast and furious, etc...">
                    </div>

                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.SearchModel.SortingId"></label>
                            <select asp-for="@Model.SearchModel.SortingId" class="form-control">
                                @foreach (var sorting in Model.Sortings)
                                {
                                    <option value="@sorting.Id">@sorting.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="col-lg-12">
                    <input class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Index" type="submit" value="Search in Collections" />
                </div>

                <hr />

                <div class="col-lg-12">
                    <input class="btn btn-outline-secondary text-center w-100" asp-controller="Forum" asp-action="Index" type="submit" value="Search in Forum" />
                </div>

            </form>
        </div>

    </div>
</div>

<hr />


<partial name="_TrendingCollectionsPartial" model="@Model.TrendingCollections.ToList()" />




