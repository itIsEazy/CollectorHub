
@model MainPageIndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="col-lg-12">
    <p class="text-danger">TODO : Search is not working!</p>
    <p class="text-danger">ADD : script 3 seconds after loading page goto #trendingCollections!</p>
    <p class="text-danger">TODO : collections count in the middle do not work!</p>
    <p class="text-danger">TODO : create abstract collection model for Trending Collections!</p>
</div>

<div class="text-center">
    <h2 class="display-4">Digitalize your collection</h2>
    <h2 class="display-4">Build FROM collectors FOR collectors!</h2>
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <div class="col-lg-12">
        <div class="text-center">
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalUsersCount Users</p>
            </div>
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalCollectionsCount Collections</p>
            </div>
            <div class="col-lg-2 d-inline-block">
                <p>@Model.TotalForumPostsCount Posts</p>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="col-lg-12">
    <div class="col-lg-12 text-center">
        <button class="btn btn-outline-secondary text-center w-100" type="button" data-toggle="collapse" data-target="#search" aria-expanded="false" aria-controls="collapseExample">
            Search in Collection, Forum, Market...
        </button>
    </div>

    <div class="collapse" id="search">
        <div class="col-lg-12 border">
            <form method="post">
                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label></label>
                            <select class="form-control">
                                <option value="">All</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label></label>
                        <input class="form-control" placeholder="Hot Wheels fast and furious, etc...">
                    </div>

                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label></label>
                            <select class="form-control">
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="col-lg-12">
                    <input class="btn btn-outline-secondary text-center w-100" asp-controller="Forum" asp-action="Index" type="submit" value="Search" />
                </div>

            </form>
        </div>
    </div>
</div>

<hr />


<partial name="_TrendingCollectionsPartial" model="@Model.TrendingCollections.ToList()" />




