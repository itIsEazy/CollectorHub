@model LegoThemeViewModel

<div class="col-lg-12">
    <a class="btn btn-outline-secondary text-center w-100" asp-controller="Themes" asp-action="Index" role="button">Back to all themes</a>
</div>

<div class="col-lg-12">

    <h2 class=" text-center display-4">All Lego minifigures currently available</h2>

    <div class="offset-lg-1 col-lg-10 text-center">

        @foreach (var fig in Model.LegoFigures)
        {
            <div  class="  col-md-4 d-inline-block" style="width: 200px; height:500px">
                <p class=" text-center">@fig.SwNumber</p>
                <img class="card-img-top col-md-12" src="@fig.ImageUrl" alt="Car Card photo">
                <div class="card-body">
                    <h5 class="card-title">@fig.Name</h5>
                    <a asp-controller="Marketplace" asp-action="Index" class="btn btn-outline-secondary">Check market for this item</a>
                </div>
            </div>
        }

    </div>
</div>