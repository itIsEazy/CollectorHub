@model HotWheelsFastAndFuriousPremiumCollectionViewModel


@if (this.User.Identity.Name != Model.User.UserName)
{
    <h1 class="text-center">@Model.User.UserName 's Collection</h1>
}

<div class="col-lg-12">
    <div class="text-center">
        <img style="width: 450px; height:300px" src="@Model.ImageUrl" alt="Collection IMAGE" />
    </div>

</div>

<div class="col-lg-12">
    <h1 class="text-center">@Model.Name</h1>
    <p class="text-center">@Model.Description</p>
</div>

<div class="col-lg-12 border">
    <h2 class="text-center">Items in this collection</h2>
    @if (Model.Items == null || Model.Items.Count() == 0)
    {
        <h3 class="text-center">NO ITEMS FOR NOW</h3>
    }
    else
    {
        foreach (var item in Model.Items)
        {
            <p>@item.Car.Name</p>
        }
    }
</div>


@if (this.User.Identity.Name == Model.User.UserName)
{
    <div class="col-lg-12 border">
        <h2 class="text-center">All items in this collection</h2>
        @foreach (var serie in Model.AllSeries)
        {
            <div>
                <h2>@serie.Name - @serie.Year</h2>
                <div>
                    @foreach (var car in serie.Cars)
                    {
                        <div class="  col-md-4 d-inline-block" style="width: 200px; height:500px">
                            <p class=" text-center">@car.Col</p>
                            <img class="card-img-top col-md-12" src="@car.PhotoCardLink" alt="Car Card photo">
                            <div class="card-body">
                                <h5 class="card-title">@car.Name</h5>
                                <p class="card-textx">@car.Movie</p>
                                <a asp-controller="Marketplace" asp-action="Index" class="btn btn-primary">Check market for this item</a>
                                <form method="post">
                                    <div class="form-group">
                                        <label asp-for="Description"></label>
                                        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Your opinion for the collection for example..."></textarea>
                                        <span asp-validation-for="Description" class="small text-danger"></span>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="IsPublic" type="checkbox" class="form-check-input">
                                        <label asp-for="IsPublic" class="form-check-label">Make My Collection Public</label>
                                    </div>
                                    <input class="btn btn-primary mt-3" type="submit" value="Create" />
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}










