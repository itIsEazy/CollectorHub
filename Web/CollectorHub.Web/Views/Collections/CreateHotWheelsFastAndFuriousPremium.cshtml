@model CreateHotWheelsFastAndFuriousPremiumCollectionInputModel

<a class="btn btn-outline-secondary text-left" asp-controller="Collections" asp-action="Create" role="button">Back to Create Page</a>

<h1 class="text-center">Create Fast and Furious Premium Collection</h1>

<div class="col-lg-12">
    <img  style="height:450px; width:1000px" src="http://hwcollectorsnews.com/wp-content/uploads/2019/09/Fat-original-Box-Set-1024x508.jpg" alt="hot wheels collection picture" />
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Your opinion for the collection for example..."></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsPublic" type="checkbox" class="form-check-input">
        <label asp-for="IsPublic" class="form-check-label">Make My Collection Public</label>
    </div>
    <div class="form-check">
        <input asp-for="ShowPrices" type="checkbox" class="form-check-input">
        <label asp-for="ShowPrices" class="form-check-label">Show prices for my Items</label>
    </div>
    <input class="btn btn-primary mt-3" type="submit" value="Create" />
</form>

