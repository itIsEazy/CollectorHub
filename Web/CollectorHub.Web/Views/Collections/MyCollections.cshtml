

@model HotWheelsFastAndFuriousPremiumCollectionMyCollectionsViewModel

    <h1 class="text-danger">ADD : No collections for now when no collection (Very Important)  </h1>


    <div class="text-center">
        <h2>All Collections</h2>
    </div>

    <div class="col-lg-12">
        <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Create" role="button">Create Collection</a>
    </div>


    @if (Model != null)
    {
        <div>
            <h1 class="text-center border">Hot Wheels collections</h1>
            <div class="col-lg-12 border">

                <div class="text-center">
                    <p class="text-center">@Model.Name</p>
                </div>

                <div class="text-center">
                    <img style="width: 450px; height:300px" src="@Model.ImageUrl" alt="Collection Image" />
                </div>

                <hr />

                <div class="text-center">
                    <p class="text-center">@Model.Progression</p>
                </div>

                <div class="text-center">
                    <p>@Model.Description</p>
                </div>
                <div class="col-lg-12 text-center">
                    <a asp-controller="Collections" asp-action="HotWheelsFastAndFuriousPremium" asp-route-collectionId="@Model.Id" class="btn btn-outline-secondary text-center w-100" role="button">Check out collection</a>
                </div>
            </div>
        </div>
    }










