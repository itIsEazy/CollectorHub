
@model CollectionsIndexViewModel

<div class="text-center">
    <h2 class="display-4">Users's Collections</h2>
</div>

<h1 class="text-danger">TODO : add pricing shi</h1>


<hr />

<div class="col-lg-12">
    <div class="col-lg-12 text-center">
        <button class="btn btn-outline-secondary text-center w-100" type="button" data-toggle="collapse" data-target="#search" aria-expanded="false" aria-controls="collapseExample">
            Search in Collections
        </button>
    </div>

    <div class="collapse" id="search">

        <hr />

        <div class=" col-lg-12 ">
            <div>
                <p class="text-center">Get Collections by Category</p>
            </div>
            <div class="text-center">
                @foreach (var category in Model.Categories)
                {
                    <div class="d-inline-block">
                        <img class=" " style="height: 100px; width: 100px" src="@category.ImageUrl" alt="Category logo" />
                        <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Index" asp-route-categoryId="@category.Id" role="button">@category.Name</a>
                    </div>
                }
            </div>
        </div>

        <hr />

        <div class="col-lg-12 border">
            <form method="post">
                <div class="row">
                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.SearchModel.CategoryId"></label>
                            <select asp-for="@Model.SearchModel.CategoryId" class="form-control">
                                <option value="">All</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="@Model.SearchModel.SearchInput"></label>
                        <input asp-for="@Model.SearchModel.SearchInput" class="form-control" placeholder="Hot Wheels fast and furious, etc...">
                    </div>

                    <div class="form-group col-md-4">
                        <div class="form-group">
                            <label asp-for="@Model.SearchModel.SortingId"></label>
                            <select asp-for="@Model.SearchModel.SortingId" class="form-control">
                                @foreach (var sorting in Model.Sortings)
                                {
                                    <option value="@sorting.Id">@sorting.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="col-lg-12">
                    <input class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Index" type="submit" value="Search" />
                </div>

            </form>
        </div>
    </div>
</div>

<hr />

<div class="col-lg-12">
    <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="MyCollections" role="button">My Collections</a>
</div>

<hr />

<div class="col-lg-12">
    <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Create" role="button">Create Collection</a>
</div>

<hr />



<hr />

<partial name="_TrendingCollectionsPartial" model="@Model.TrendingCollectons.ToList()" />





