
@model CollectionsIndexViewModel

<h2 class="text-center">Categories</h2>

<div class="border col-lg-12 ">
    <div>
        <p class="text-center">Get Collections by Category</p>
    </div>
    <div class="text-center">
        @foreach (var category in Model.Categories)
        {
            <div class="d-inline-block">
                <img class="border " style="height: 100px; width: 100px" src="@category.ImageUrl" alt="Category logo" />
                <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Index" asp-route-categoryId="@category.Id" role="button">@category.Name</a>
            </div>
        }
    </div>
</div>
<div class="col-lg-12">
    <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Create" role="button">Create Collection</a>
</div>

<hr />

<div class="col-lg-12">
    <h1 class="text-center border">Trending Collections</h1>
    @if (Model.TrendingCollectons == null || Model.TrendingCollectons.Count <= 0)
    {
        <div class="col-lg-12">
            <h1 class="text-center">NO TRENDING COLLECTIONS</h1>
        </div>
    }
    else
    {
        <div class="col-lg-12 border">
            @foreach (var collection in Model.TrendingCollectons)
            {
                <div class="d-inline-block border">
                    <p class="text-center">@collection.Name</p>
                    <img style="width: 200px; height:200px" src="@collection.ImageUrl" alt="Collection Image" />
                    <p class="text-center">Owner</p>
                    <div class="text-center">
                        <a class="btn btn-outline-secondary text-center w-100 " role="button">@collection.Owner.UserName</a>
                    </div>
                    <div>
                        <a class="btn btn-outline-secondary text-center w-100 " role="button">Check Out Collection</a>
                    </div>
                </div>
            }
        </div>
    }
</div>





