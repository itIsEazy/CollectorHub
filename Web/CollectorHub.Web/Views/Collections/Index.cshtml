
@model CollectionsIndexViewModel

<h2 class="text-center">Categories</h2>

<div class="border col-lg-12 ">
    <div>
        <p class="text-center">Get Collections by Category</p>
    </div>
    <div class="text-center">
        @foreach (var category in Model.Categories)
        {
            <div class="d-inline-block">
                <img class="border " style="height: 100px; width: 100px" src="@category.ImageUrl" alt="Category logo" />
                <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Index" asp-route-categoryId="@category.Id" role="button">@category.Name</a>
            </div>
        }
    </div>
</div>
<div class="col-lg-12">
    <a class="btn btn-outline-secondary text-center w-100" asp-controller="Collections" asp-action="Create" role="button">Create Collection</a>
</div>

<hr />

<partial name="_TrendingCollectionsPartial" model="@Model.TrendingCollectons" />





